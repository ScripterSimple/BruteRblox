local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local ChatEvents = ReplicatedStorage:WaitForChild("DefaultChatSystemChatEvents")
local sayMessage = ChatEvents:WaitForChild("SayMessageRequest")

local player = Players.LocalPlayer
local HttpService = game:GetService("HttpService")

-- Table de correspondance des lettres avec les Ã©mojis
local emojiMap = {
    A = "ğŸ…°", B = "ğŸ…±", C = "ğŸ…²", D = "ğŸ…³", E = "ğŸ…´", F = "ğŸ…µ", G = "ğŸ…¶", H = "ğŸ…·",
    I = "ğŸ…¸", J = "ğŸ…¹", K = "ğŸ…º", L = "ğŸ…»", M = "ğŸ…¼", N = "ğŸ…½", O = "ğŸ…¾", P = "ğŸ…¿",
    Q = "ğŸ†€", R = "ğŸ†", S = "ğŸ†‚", T = "ğŸ†ƒ", U = "ğŸ†„", V = "ğŸ†…", W = "ğŸ††", X = "ğŸ†‡",
    Y = "ğŸ†ˆ", Z = "ğŸ†‰"
}

-- Fonction pour convertir le texte en Ã©mojis, en gardant les espaces
local function convertToEmoji(message)
    local newMessage = ""
    for i = 1, #message do
        local char = message:sub(i, i):upper()
        if char == " " then
            newMessage = newMessage .. " "  -- Conserve l'espace
        elseif emojiMap[char] then
            newMessage = newMessage .. emojiMap[char] .. " "
        else
            newMessage = newMessage .. char -- Conserve les caractÃ¨res non pris en charge
        end
    end
    return newMessage
end

